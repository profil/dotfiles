super + shift + q
	bspc quit

super + w
	bspc node -c

super + m
	bspc desktop -l next

super + {t,s,f,p}
	bspc node -t ~{tiled,floating,fullscreen,pseudo_tiled}

super + Tab
	bspc desktop -f last.local

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}.local

super + {_,shift + }c
	bspc node -f {next,prev}

super + {_, shift +}{comma,period}
	bspc {monitor -f,node -m} {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p ~{west,south,north,east}

super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:\^{1-9,10}

super + {minus,plus}
	bspc config -d focused window_gap (math (bspc config -d focused window_gap) {-,+} 1)

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	st

super + space
	dmenu_run

XF86AudioRaiseVolume
	amixer set Master 5+

XF86AudioLowerVolume
	amixer set Master 5-

XF86AudioMute
	amixer set Master toggle

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

super + section
	xdotool search --onlyvisible --classname scratchpad windowunmap ; \
	or xdotool search --classname scratchpad windowmap ; \
	or st -n scratchpad -g 160x30+218+100 &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

