super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + m
	bspc desktop -l next

super + b
	bspc desktop -B

super + {t,s,f,p}
	bspc node -t {tiled,floating,fullscreen,pseudo_tiled}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + {_,shift +}{n,m}
	bspc {monitor -f,node -m} {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:\^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	st

super + space
	dmenu_run

XF86AudioRaiseVolume
	amixer set Master 5+

XF86AudioLowerVolume
	amixer set Master 5-

XF86AudioMute
	amixer set Master toggle

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

super + section
	xdotool search --onlyvisible --classname scratchpad windowunmap ; \
	or xdotool search --classname scratchpad windowmap ; \
	or st -c scratchpad -g 160x30+218+100 &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

