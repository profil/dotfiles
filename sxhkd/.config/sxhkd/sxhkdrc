super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f,p}
	bspc window -t {floating,fullscreen,pseudo_tiled}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

# super + m
# 	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + {n,m}
	bspc monitor -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} focused:\^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	st

super + space
	dmenu_run

XF86AudioRaiseVolume
	amixer set Master 5+

XF86AudioLowerVolume
	amixer set Master 5-

XF86AudioMute
	amixer set Master toggle

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

super + section
	xdotool search --onlyvisible --classname scratchpad windowunmap ; \
	or xdotool search --classname scratchpad windowmap ; \
	or st -c scratchpad -g 160x30+218+100 &
#	xdotool search --onlyvisible --classname scratchpad windowunmap \
#	|| xdotool search --classname scratchpad windowmap \
#	|| st -c scratchpad -g 160x30+218+100 &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

