super + shift + q
	bspc quit

super + w
	bspc window -c

super + space
	dmenu_run

super + shift + Return
	st

# circulate binary tree leaves back/forward ("rotate" window layout)
super + {comma,period}
	bspc desktop -C {backward,forward}

# rotate binary tree clockwise/counter-clockwise
super + ctrl + {comma,period}
    bspc desktop -R {-90,90}

super + t
	bspc desktop -l next

super + {s,d,f}
	bspc window -t {floating,pseudo_tiled,fullscreen}

XF86AudioRaiseVolume
	amixer set Master 5+

XF86AudioLowerVolume
	amixer set Master 5-

XF86AudioMute
	amixer set Master toggle

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

~button1
	bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + {_, shift +}{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + Tab
    bspc desktop -f last

# preselect the splitting area
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + {_,shift +}{1-6}
	bspc {desktop -f,window -d} ^{1-6}

super + section
	xdotool search --onlyvisible --classname scratchpad windowunmap \
	|| xdotool search --classname scratchpad windowmap \
	|| st -c scratchpad -g 160x30+218+100 &
